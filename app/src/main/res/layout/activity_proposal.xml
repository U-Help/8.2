<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context=".ProposalActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="374dp"
        android:layout_height="449dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnQ"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/textView2hd"
        android:layout_toLeftOf="@id/textView2hd"
        android:background="@drawable/change_color_btn"
        android:text="确认收货"
        android:textSize="24sp"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnD"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/btnQ"
        android:layout_toRightOf="@id/textView2hd"
        android:background="@drawable/change_color_button_red"
        android:text="取消订单"
        android:textSize="24sp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2hd"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />
</RelativeLayout>